<% unless notice.blank?%>
	<p id="notice"><%= notice %></p> 
<% end %>

<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Channels:</b>
  <%= @package.get_channels.collect(&:name).join(', ') %>
</p>

<p>
  <b>Price:</b>
  <%= @package.price %>
</p>

<%= link_to 'Edit', edit_package_path(@package), class: 'action edit' %> |
<%= link_to 'List all package', packages_path, class: 'action list' %> |
<%= link_to 'Back', request.referer || packages_path, class: 'action back' %>
